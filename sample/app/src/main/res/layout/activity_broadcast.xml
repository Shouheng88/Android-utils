<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".event.BroadcastActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:onClick="testGlobalBroadcast"
        android:text="Normal broadcast"
        style="@style/MenuButton" />

    <androidx.appcompat.widget.AppCompatButton
        android:onClick="testGlobalBroadcastEvent"
        android:text="Broadcast Event"
        style="@style/MenuButton" />

    <androidx.appcompat.widget.AppCompatButton
        android:onClick="testGlobalBroadcastWithMultiProcesses"
        android:text="Broadcast With Processes"
        style="@style/MenuButton" />

</LinearLayout>