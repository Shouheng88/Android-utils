<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TestToastUtilsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:text="弹出 Toast"
            android:onClick="showToast"
            style="@style/MenuButton"/>

        <androidx.appcompat.widget.AppCompatButton
            android:text="居中弹出 Toast"
            android:onClick="showCenterToast"
            style="@style/MenuButton"/>

        <androidx.appcompat.widget.AppCompatButton
            android:text="文字颜色和大小 Toast"
            android:onClick="showCustomMsgToast"
            style="@style/MenuButton"/>

        <androidx.appcompat.widget.AppCompatButton
            android:text="撤销 Toast"
            android:onClick="cancelToast"
            style="@style/MenuButton"/>

        <androidx.appcompat.widget.AppCompatButton
            android:text="自定义 Toast"
            android:onClick="customToast"
            style="@style/MenuButton"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>