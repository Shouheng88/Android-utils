<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="custom_prop">@color/colorAccent</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="custom_prop">@color/colorPrimary</item>
    </style>

    <style name="MenuButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <attr name="custom_prop" format="color"/>

    <declare-styleable name="ShadowLayout">
        <attr format="color" name="shadow_layout_color"/>
        <attr format="color" name="shadow_layout_background_color"/>
        <attr format="dimension" name="shadow_layout_offsetX"/>
        <attr format="dimension" name="shadow_layout_offsetY"/>
        <attr format="dimension" name="shadow_layout_blur"/>
        <attr format="dimension" name="shadow_layout_radius"/>
    </declare-styleable>
</resources>
